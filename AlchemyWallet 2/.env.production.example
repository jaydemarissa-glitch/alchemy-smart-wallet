# Environment Configuration Template for Live-Ready Wallet
# Copy this file to .env and fill in the actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@host:port/database"

# =============================================================================
# BLOCKCHAIN PROVIDER CONFIGURATION (Multi-Provider Support)
# =============================================================================

# Primary Provider - Alchemy
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Fallback Providers
INFURA_API_KEY=your_infura_api_key_here
ANKR_API_KEY=your_ankr_api_key_here
QUICKNODE_ENDPOINT=your_quicknode_rpc_endpoint_here

# =============================================================================
# GASLESS TRANSACTION CONFIGURATION
# =============================================================================
GASLESS_CASH_API_KEY=your_gasless_cash_api_key
GASLESS_CASH_BASE_URL=https://api.gasless.cash

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
REPLIT_CLIENT_ID=your_replit_oauth_client_id
REPLIT_CLIENT_SECRET=your_replit_oauth_client_secret
REPLIT_REDIRECT_URI=http://localhost:3000/auth/replit/callback

# Session Security
SESSION_SECRET=your_very_secure_session_secret_at_least_64_characters_long_random_string

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,https://your-production-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CSRF_PROTECTION=true

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# External Monitoring Services (Optional)
SENTRY_DSN=your_sentry_dsn_for_error_tracking
DATADOG_API_KEY=your_datadog_api_key
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# Grafana Dashboard
GRAFANA_PASSWORD=your_grafana_admin_password

# =============================================================================
# NETWORK-SPECIFIC CONFIGURATION
# =============================================================================

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_FALLBACK_RPC_1=https://solana-api.projectserum.com
SOLANA_FALLBACK_RPC_2=https://rpc.ankr.com/solana

# Cosmos Configuration
COSMOS_RPC_URL=https://cosmos-rpc.polkachu.com
COSMOS_REST_URL=https://cosmos-rest.polkachu.com

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Request Size Limits
MAX_REQUEST_SIZE=50MB
MAX_JSON_SIZE=10MB

# =============================================================================
# REDIS CONFIGURATION (for session storage and caching)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_SESSION_PREFIX=alchemy_wallet_session:

# =============================================================================
# EMAIL NOTIFICATIONS (Optional)
# =============================================================================
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASS=your_email_password
SMTP_FROM=noreply@your-domain.com

# =============================================================================
# WEBHOOK CONFIGURATION (for alerts)
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=10000

# Circuit Breaker Settings
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# Gas Optimization Settings
GAS_OPTIMIZATION_ENABLED=true
BATCH_TRANSACTION_ENABLED=true
BATCH_WINDOW_MS=30000
MAX_BATCH_SIZE=10

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_CROSS_NETWORK=true
ENABLE_SOLANA_SUPPORT=true
ENABLE_COSMOS_SUPPORT=false
ENABLE_BITCOIN_SUPPORT=false
ENABLE_GAS_OPTIMIZATION=true
ENABLE_TRANSACTION_BATCHING=true
ENABLE_ADVANCED_MONITORING=true

# =============================================================================
# DEVELOPMENT/TESTING ONLY
# =============================================================================
# Uncomment these for development/testing environments

# Enable mock providers when API keys are not available
# ENABLE_MOCK_PROVIDERS=true

# Disable rate limiting for testing
# DISABLE_RATE_LIMITING=true

# Enable debug logging
# DEBUG=true
# LOG_SQL_QUERIES=true

# Test database
# TEST_DATABASE_URL="postgresql://test:test@localhost:5432/alchemy_wallet_test"