# Environment variables for staging deployment
# Copy this file to .env.staging and fill in the actual values

# Database Configuration
DATABASE_URL="postgresql://postgres:password@postgres:5432/alchemy_wallet_staging"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password

# Alchemy API Configuration
ALCHEMY_API_KEY=your_alchemy_api_key

# Gasless.cash Integration
GASLESS_CASH_API_KEY=your_gasless_cash_api_key
GASLESS_CASH_BASE_URL=https://api.gasless.cash

# Replit Authentication
REPLIT_CLIENT_ID=your_replit_client_id
REPLIT_CLIENT_SECRET=your_replit_client_secret
REPLIT_REDIRECT_URI=http://localhost:3000/auth/replit/callback

# Session Configuration
SESSION_SECRET=your_very_secure_session_secret_at_least_64_characters_long

# Monitoring
GRAFANA_PASSWORD=your_grafana_admin_password

# Application Configuration
NODE_ENV=staging
PORT=3000
LOG_LEVEL=info

# Optional: External Monitoring Services
# SENTRY_DSN=your_sentry_dsn
# DATADOG_API_KEY=your_datadog_api_key